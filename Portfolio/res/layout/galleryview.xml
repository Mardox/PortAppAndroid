<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/header_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/back_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgview0"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery0" />

            <ImageView
                android:id="@+id/imgview1"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery1" />

            <ImageView
                android:id="@+id/imgview2"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery2" />

            <ImageView
                android:id="@+id/imgview3"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery3" />

            <ImageView
                android:id="@+id/imgview4"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery4" />

            <ImageView
                android:id="@+id/imgview5"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery5" />

            <ImageView
                android:id="@+id/imgview6"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery6" />

            <ImageView
                android:id="@+id/imgview7"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery7" />

            <ImageView
                android:id="@+id/imgview8"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery8" />

            <ImageView
                android:id="@+id/imgview9"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/gallery9" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>