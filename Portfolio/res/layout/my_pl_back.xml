<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/back"
    android:background="@drawable/sky_bg"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingRight="10dp" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Delete"
            
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/delete"
            android:background="@drawable/trash_selector"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/child_on_off_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Child Lock"
            android:textColor="@android:color/white" />

        <ToggleButton
            android:id="@+id/childlock_toggle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/on_off_selector"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/sync_on_off_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Sync on"
            android:textColor="@android:color/white" />

        <ToggleButton
            android:id="@+id/sync_toggle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/on_off_selector"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</LinearLayout>